<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.repository.CategoryDetailMapper">
    <!-- マッピング（SELECT文用resultMap） -->
    <resultMap id="categoryDetail" type="com.example.demo.entity.CategoryDetail">
        <id column="cd_id" property="cdId" />
        <result column="type_name" property="typeName" />
    </resultMap>
    <!-- 全件取得 -->
    <select id="selectAll" resultMap="categoryDetail">
        SELECT * FROM category_detail;
    </select>
</mapper>