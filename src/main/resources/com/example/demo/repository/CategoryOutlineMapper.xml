<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.repository.CategoryOutlineMapper">
    <!-- マッピング（SELECT文用resultMap） -->
    <resultMap id="categoryOutline" type="com.example.demo.entity.CategoryOutline">
        <id column="co_id" property="coId" />
        <result column="type_name" property="typeName" />
    </resultMap>
        <!-- 一件取得 -->
    <select id="selectById" resultMap="categoryOutline">
        SELECT *
        FROM category_outline
        WHERE co_id = #{coId};
    </select>
    <!-- 全件取得 -->
    <select id="selectAll" resultMap="categoryOutline">
        SELECT * FROM category_outline;
    </select>
</mapper>